<% if current_user.admin?%>

<table class="table table-striped" >
  <thead class="thead-dark">
    <tr>
      <th scope="col">Place Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <%= render @place %>
  </tbody>
</table>


<div>
  <%= link_to "Edit this place", edit_place_path(@place),class:"btn btn-app mt-3" %>
  <%= link_to "Back to places", places_path,class:"btn btn-app mt-3" %>
  <%= link_to 'Back to Schedules', schedules_path,class:"btn btn-app mt-3" %>

  <%= button_to "delete this place", @place, method: :delete , data: {confirm: 'Are you Sure?'},class:"btn btn-danger mt-3"%>
</div>
<% end %>
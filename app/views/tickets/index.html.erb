<h1>Tickets</h1>

<%= link_to "New ticket", schedules_path,class:"btn btn-primary mt-3 p-3" %>

<div class="form-group pull-right">
    <input type="text" class="search mt-3 mb-3" placeholder="Search ticket here">
</div>
<table class="table table-striped table-bordered results" >
  <thead class="thead-dark">
    <tr>
      <th scope="col">User Name </th>
      <th scope="col">Train Name </th>
      <th scope="col">Starting Place</th>
      <th scope="col">destination place</th>
      <th scope="col">Starting time</th>
      <th scope="col">reaching time</th>
      <th scope="col">Tour fare for single ticket</th>
      <th scope="col">No of People</th>
      <th scope="col">Total amount</th>
      <th scope="col">Booking time</th>
      <th scope="col">Payment Id</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <div id="tickets">
      <% @tickets.each do |ticket| %>
        <% if current_user.id == ticket.user_id%>
          <%= render ticket %>
        <% end %>
      <% end %>
    </div>
  </tbody>
</table>



<%= link_to 'Back to Schedules', schedules_path, class:"btn btn-app mt-3" %>

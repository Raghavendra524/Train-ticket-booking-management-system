<% if current_user.admin?%>

<h1>Trains</h1>

<%= link_to "New train", new_train_path ,class:"btn btn-primary mt-3 p-3"%>

<div class="form-group pull-right">
    <input type="text" class="search mt-3 mb-3" placeholder="Search train here">
</div>
<table class="table table-striped table-bordered results" >
  <thead class="thead-dark">
    <tr>
      <th scope="col">Train Id </th>
      <th scope="col">Train Name</th>
      <th scope="col">Passenger capacity</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
<div id="trains">
  <% @trains.each do |train| %>
    <%= render train %>
  <% end %>
</div>
  </tbody>
</table>

<% end %>